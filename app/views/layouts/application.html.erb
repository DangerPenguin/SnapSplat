<!DOCTYPE html>
<html>
<head>
  <title>SnapSplat</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= filepicker_js_include_tag %>
  <%= csrf_meta_tags %>
</head>
<body>
	
<!-- Nav Bar setup -->	
<% if !current_user.nil? %>
  <ul>
    <li style="display: inline;">Logged in as: <%= current_user.username %></li>
    <li style="display: inline-block;"><%= button_to "Logout", session_url, :method => :delete %></li>
	<li style="display: inline;"><a href="#/home">HOME</a></li>
	<li style="display: inline;"><a href="#/profile/<%=current_user.id%>">PROFILE</a></li>
	<li style="display: inline;"><a href="#/explore">EXPLORE</a></li>
	<li style="display: inline;"><a href="#/upload_photo">UPLOAD SNAP</a></li>
  </ul>
<% end %>

<!-- Error/Notices flash -->
<% if flash.now[:notice] %>
<ul>
<% flash.now[:notice].each do |notice| %>
	<li><%= notice %></li>
<% end %>
</ul>
<% end %>

<!-- Load current page -->
<%= yield %>

</body>
</html>
